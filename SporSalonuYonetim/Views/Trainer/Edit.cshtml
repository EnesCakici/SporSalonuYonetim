@model SporSalonuYonetim.Models.Trainer

@{
    ViewData["Title"] = "Egitmet Bilgileri Düzenle";
}

<div class="container mt-5">
    <h2>Egitmet Bilgileri Düzenle</h2>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">

                <input type="hidden" asp-for="TrainerId" />

                <div class="form-group mb-3">
                    <label asp-for="TrainerName" class="control-label">Eğitmen Adı</label>
                    <input asp-for="TrainerName" class="form-control" />
                    <span asp-validation-for="TrainerName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Specialization" class="control-label">Uzmanlık</label>
                    <input asp-for="Specialization" class="form-control" />
                    <span asp-validation-for="Specialization" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ImageUrl" class="control-label">Fotoğraf Linki (URL)</label>
                    <input asp-for="ImageUrl" class="form-control" />
                </div>

                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="form-group mb-3">
                        <label>Mevcut Fotoğraf:</label><br />
                        <img src="@Model.ImageUrl" width="100" class="img-thumbnail" />
                    </div>
                }

                <div class="form-group">
                    <button type="submit" class="btn btn-warning">Güncelle</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>


@model List<SporSalonuYonetim.Models.Service>

@{
	ViewData["Title"] = "Hizmetler";  //Tarayici sekemesindeki baslik
}

<div class="container mt-5 ">
	<h2>Hizmet Listesi</h2>

	@if (User.Identity.IsAuthenticated)
	{
		<a href="/Service/Create" class="btn btn-primary mb-3"> Yeni Hizmet Ekle</a>
	}
	

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Hizmet Adı</th>
				<th>Süre (Dk)</th>
				<th>Ücret</th>
				@if (User.Identity.IsAuthenticated){
					<th>İşlemler</th>
				}
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.ServiceName</td>
					<td>@item.DurationMinutes</td>
					<td>@item.Price ₺</td>
					@if (User.Identity.IsAuthenticated)
					{
						<td>
							<a href="/Service/Edit/@item.ServiceId" class="btn btn-warning btn-sm">Düzenle</a>
							<a href="/Service/Delete/@item.ServiceId" class="btn btn-danger btn-sm">Sil</a>
						</td>
					}
				</tr>
			}
		</tbody>
	</table>
</div>



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SporSalonuYonetim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SporSalonuYonetim.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SporSalonuYonetim</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Service" asp-action="Index">Hizmetler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Trainer" asp-action="Index">Eğitmenler</a>
                        </li>
                        @if(User.IsInRole("Admin"))
                        {
                        <li class="nav-item">
                            <a class="nav-link text-danger fw-bold" asp-controller="Home" asp-action="ApiTest">API TEST</a>
                        </li>

                        }
                        
                        @if(User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class=" nav-link text-dark" asp-controller="Appointment" asp-action="Index">Randevularım</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-primary fw-bold" asp-controller="AiSupport" asp-action="Index">🤖 AI ASİSTAN</a>
                            </li>

                            <li class="nav-item">
                                <a class=" nav-link btn btn-outline-primary ms-2" asp-controller="Appointment" asp-action="Create">Randevu Al</a>

                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            // Eğer kullanıcı giriş yapmışsa bu kısım görünür
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Merhaba, @User.Identity.Name</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-danger text-white ms-2" href="/Account/Logout">Çıkış Yap</a>
                            </li>
                        }
                        else
                        {
                            // Giriş yapmamışsa bu kısım görünür
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Account/Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white ms-2" href="/Account/Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SporSalonuYonetim - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

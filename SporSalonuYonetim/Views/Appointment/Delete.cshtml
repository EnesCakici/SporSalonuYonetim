@model SporSalonuYonetim.Models.Appointment

@{
    ViewData["Title"] = "Randevu İptal";
}

<div class="container mt-5">
    <div class="card border-danger shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Randevu İptali</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title text-danger">Bu randevuyu iptal etmek istediğinize emin misiniz?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Tarih</dt>
                <dd class="col-sm-9">@Model.Date.ToString("dd MMMM yyyy HH:mm")</dd>

                <dt class="col-sm-3">Eğitmen</dt>
                <dd class="col-sm-9">@Model.Trainer.TrainerName</dd>

                <dt class="col-sm-3">Hizmet</dt>
                <dd class="col-sm-9">@Model.Service.ServiceName</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="AppointmentId" />
                <button type="submit" class="btn btn-danger">Evet, İptal Et</button>
                <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
            </form>
        </div>
    </div>
</div>
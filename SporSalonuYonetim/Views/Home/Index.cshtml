@model SporSalonuYonetim.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Ana Sayfa";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="text-center py-5 bg-white">
    <div class="container">

        <div class="d-flex justify-content-center align-items-center mb-3">
            <h1 class="display-4 fw-bold" style="color: #003366;">
                <i class="fa-solid fa-dumbbell text-primary me-2"></i>Vora Spor Salonu
            </h1>
        </div>

        <h2 class="fw-normal text-secondary mb-4">
            Sağlıklı Yaşam ve Profesyonel Eğitimi <br>
            <span class="fw-bold text-primary">Birleştiren Spor Deneyimi</span>
        </h2>

        <p class="lead text-muted mb-5 mx-auto" style="max-width: 700px;">
            Uzman antrenörler eşliğinde, yapay zeka destekli programlarla hedeflerinize ulaşın.
            Hijyenik ortam, son teknoloji ekipmanlar ve esnek randevu sistemi.
        </p>

        <div class="d-flex justify-content-center gap-3">
            @if (!User.Identity.IsAuthenticated)
            {
                <a href="/Account/Register" class="btn btn-primary btn-lg px-5 rounded-pill shadow-sm">
                    Ücretsiz Kayıt Ol
                </a>
                <a href="/Account/Login" class="btn btn-outline-dark btn-lg px-5 rounded-pill">
                    Giriş Yap
                </a>
            }
            else
            {
                <a href="/Appointment/Create" class="btn btn-primary btn-lg px-5 rounded-pill shadow-sm">
                    <i class="fa-regular fa-calendar-check me-2"></i>Randevu Al
                </a>
                <a href="/AiSupport/Index" class="btn btn-warning btn-lg px-5 rounded-pill shadow-sm text-dark fw-bold">
                    <i class="fa-solid fa-robot me-2"></i>AI Asistan
                </a>
            }
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row g-4 text-center">

        <div class="col-md-4">
            <div class="p-4 border rounded-3 h-100 shadow-sm hover-effect">
                <h5 class="text-primary fw-bold mb-3">Ana Hizmetlerimiz</h5>
                <div class="d-flex justify-content-center gap-3 text-secondary fs-2">
                    <i class="fa-solid fa-person-running" title="Kardiyo"></i>
                    <i class="fa-solid fa-dumbbell" title="Fitness"></i>
                </div>
                <p class="mt-3 text-muted small">
                    @foreach (var s in Model.Services)
                    {
                        <span>@s.ServiceName, </span>
                    } ...
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-4 border rounded-3 h-100 shadow-sm hover-effect">
                <h5 class="text-primary fw-bold mb-3">Uzman Kadromuz</h5>
                <div class="d-flex justify-content-center gap-3 text-secondary fs-2">
                    <i class="fa-solid fa-user-ninja" title="Antrenör"></i>
                </div>
                <p class="mt-3 text-muted small">
                    @foreach (var t in Model.Trainers)
                    {
                        <span>@t.TrainerName, </span>
                    } ...
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-4 border rounded-3 h-100 shadow-sm hover-effect">
                <h5 class="text-primary fw-bold mb-3">Teknoloji</h5>
                <div class="d-flex justify-content-center gap-3 text-secondary fs-2">
                    <i class="fa-solid fa-brain" title="Yapay Zeka"></i>
                    <i class="fa-solid fa-mobile-screen" title="Mobil Uyumlu"></i>
                </div>
                <p class="mt-3 text-muted small">Yapay zeka destekli programlar ve online randevu.</p>
            </div>
        </div>

    </div>
</div>

<style>
    .hover-effect {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
            border-color: #0d6efd !important;
        }

    body {
        background-color: #ffffff;
    }
</style>